{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "pep621"
  ],
  "allowedCommands": [
    "^uv lock$"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "every weekend"
    ]
  },
  "postUpgradeTasks": {
    "commands": [
      "uv lock"
    ],
    "fileFilters": [
      "uv.lock"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "groupName": "python deps (uv)",
      "groupSlug": "python-uv-deps"
    }
  ]
}
