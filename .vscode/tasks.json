{
  "version": "2.0.0",
  "options": {
    "cwd": "${workspaceFolder}",
    "envFile": "${workspaceFolder}/.env",
    "env": {
      "UV_PROJECT_ENVIRONMENT": ".venv"
    }
  },
  "tasks": [
    {
      "label": "uv: sync dev+test+docs",
      "type": "shell",
      "command": "uv sync --locked --group dev --group test --group docs",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "clear": true }
    },
    {
      "label": "Quality: format",
      "type": "shell",
      "command": "uv run --group dev ruff format",
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Quality: lint/fix",
      "type": "shell",
      "command": "uv run --group dev ruff check . --fix",
      "problemMatcher": [
        {
          "owner": "ruff",
          "fileLocation": ["relative", "${workspaceFolder}"],
          // file.py:10:5: F401 message...
          "pattern": {
            "regexp": "^(.*?):(\\d+):(\\d+):\\s+([A-Z]\\d{3})\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "message": 5
          }
        }
      ],
      "group": "build",
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Quality: typecheck",
      "type": "shell",
      "command": "uv run --group dev mypy --hide-error-context --show-column-numbers --no-color-output",
      "problemMatcher": [
        {
          "owner": "mypy",
          "fileLocation": ["relative", "${workspaceFolder}"],
          // file:line:col: (error|warning|note): message
          "pattern": {
            "regexp": "^(.*?):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
          }
        }
      ],
      "group": "build",
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Quality: All checks",
      "dependsOrder": "sequence",
      "dependsOn": ["Quality: format", "Quality: lint/fix", "Quality: typecheck"],
      "problemMatcher": [],
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Security: Bandit (security linting)",
      "type": "shell",
      // custom template for problemMatcher: file:line:column/code/severity/message
      "command": "uv run --group dev bandit -r src -q -f custom --msg-template \"{path}:{line}:{col}: {test_id} {severity}: {msg}\"",
      "problemMatcher": [
        {
          "owner": "bandit",
          "fileLocation": ["relative", "${workspaceFolder}"],
          // file.py:12:0: Bxxx HIGH: message...
          "pattern": {
            "regexp": "^(.*?):(\\d+):(\\d+):\\s+([A-Z]\\d{3})\\s+(LOW|MEDIUM|HIGH|UNDEFINED):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "severity": 5,
            "message": 6
          }
        }
      ],
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Security: Semgrep (security checks)",
      "type": "shell",
      // --error => exit!=0 when there are findings of appropriate severity
      "command": "uv run --group dev semgrep --config p/ci --error .",
      "problemMatcher": [
        {
          "owner": "semgrep",
          "fileLocation": ["relative", "${workspaceFolder}"],
          // typical: file.py:12:3: WARNING rule.id: message
          "pattern": {
            "regexp": "^(.*?):(\\d+):(\\d+):\\s+(ERROR|WARNING|INFO)\\s+([^:]+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        }
      ],
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Security: pip-audit (dependency audit)",
      "type": "shell",
      "command": "uv run --group dev pip-audit --skip-editable --progress-spinner off --ignore-vuln GHSA-4xh5-x5gv-qwph",
      // pip-audit prints a table by default; parsing 'Problems' can be unreliable → leave the exit code
      "problemMatcher": [],
      "presentation": { "reveal": "always", "clear": true }
    },
    {
      "label": "Security: All checks",
      "dependsOrder": "sequence",
      "dependsOn": ["Security: Bandit (security linting)", "Security: Semgrep (security checks)", "Security: pip-audit (dependency audit)"],
      "problemMatcher": [],
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Tests: run",
      "type": "shell",
      // JUnit → Problems via $junit; -q stays, but we add a report
      "command": "uv run --group test pytest -q --junitxml=reports/junit.xml",
      "group": { "kind": "test", "isDefault": true },
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Tests: coverage",
      "type": "shell",
      "command": "uv run --group test pytest -q --cov=pybragerone --cov-report=term-missing --junitxml=reports/junit.xml",
      "group": "test",
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Validate: Full validation",
      "dependsOrder": "sequence",
      "dependsOn": ["Quality: All checks", "Security: All checks", "Tests: run"],
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Build dist",
      "type": "shell",
      "command": "uv run --group dev hatch build",
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always", "clear": true }
    },
    {
      "label": "Docs: build (Sphinx)",
      "type": "shell",
      "command": "bash -lc 'export LC_ALL=C.utf8 2>/dev/null || export LC_ALL=C.UTF-8 2>/dev/null || true; uv run --group docs sphinx-build -b html docs docs/_build/html'",
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "never", "clear": true }
    },
    {
      "label": "Docs: serve (local http.server)",
      "type": "shell",
      "command": "python -m http.server --directory docs/_build/html 8000",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared", "clear": false }
    },
    {
      "label": "Publish: PyPI",
      "type": "shell",
      "command": "uv run --group dev hatch publish",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "clear": true }
    },
    {
      "label": "Publish: TestPyPI",
      "type": "shell",
      "command": "uv run --group dev hatch publish --repo testpypi",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "clear": true }
    }
  ],

  "runOptions": {
    "reevaluateOnRerun": true
  }
}
