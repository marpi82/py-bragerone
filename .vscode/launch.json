{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Debug pybragerone CLI (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "pybragerone.__main__",
      "args": ["--debug", "--raw-ws"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONASYNCIODEBUG": "1",
        "PYTHONTRACEMALLOC": "1"
      },
      "justMyCode": true,
      "redirectOutput": true,
      "include": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "Debug pybragerone CLI (script alias)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/pybragerone/__main__.py",
      "args": ["--debug", "--raw-ws"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
    },
    {
      "name": "Debug tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "tests"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
